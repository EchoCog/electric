{
  "name": "supabase-basic",
  "author": "ElectricSQL",
  "license": "Apache-2.0",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "backend:start": "cd ./backend && docker compose up",
    "backend:stop": "cd ./backend && docker compose stop",
    "backend:up": "cd ./backend && docker compose up -d",
    "backend:down": "cd ./backend && docker compose -f docker-compose.yml -f ./dev/docker-compose.dev.yml down -v --remove-orphans",
    "client:generate": "npx electric-sql generate --service http://localhost:5133 --proxy postgresql://prisma:proxy_password@localhost:65432/postgres",
    "client:watch": "npm run client:generate --watch",
    "db:migrate": "npx pg-migrations apply --database postgresql://postgres:proxy_password@localhost:65432/postgres --directory ./db/migrations",
    "dev": "node copy-wasm-files.js && vite",
    "build": "node copy-wasm-files.js && tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "electric-sql": "^0.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wa-sqlite": "rhashimoto/wa-sqlite"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@electric-sql/prisma-generator": "^1.1.0",
    "@prisma/client": "4.8.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "prisma": "4.8.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
