{
  "name": "linearlite",
  "version": "0.0.1",
  "author": "Paul Harter",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "backend:down": "docker compose -f backend/compose/docker-compose.yaml down --volumes",
    "backend:start": "docker compose --env-file backend/compose/.envrc -f backend/compose/docker-compose.yaml up",
    "backend:stop": "npm run backend:down",
    "backend:up": "docker compose --env-file backend/compose/.envrc -f backend/compose/docker-compose.yaml up --detach",
    "client:generate": "npx electric-sql generate",
    "client:watch": "npx electric-sql generate --watch",
    "db:migrate": "node ./db/migrate.js",
    "db:psql": "node ./db/connect.js",
    "db:load-data": "node ./db/load_data.js",
    "db:process-data": "node ./db/process_data.js",
    "db:truncate": "node ./db/truncate.js",
    "db:reload-data": "npm run db:truncate && npm run db:load-data",
    "reset": "npm run backend:down && npm run backend:up && sleep 5 && npm run db:migrate && npm run client:generate && npm run db:load-data",
    "myreset": "npm run backend:down && npm run backend:up && sleep 5 && npm run db:migrate && sleep 5 && npm run client:generate",
    "electric:start": "node ./backend/startElectric.js",
    "dev": "vite",
    "start": "npm run dev",
    "build": "npm tauri build",
    "original-build": "tsc && vite build",
    "build-only": "vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "check-styleguide": "prettier --check --loglevel warn . && eslint src --quiet",
    "format": "prettier --write --loglevel warn .",
    "preview": "vite preview",
    "logs": "(cd backend/compose/ && docker-compose logs -f --timestamps)"
  },
  "dependencies": {
    "@firefox-devtools/react-contextmenu": "^5.1.0",
    "@headlessui/react": "^1.7.17",
    "@prisma/client": "^4.12.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@tailwindcss/forms": "^0.5.6",
    "@tauri-apps/api": "^1.4.0",
    "@tauri-apps/cli": "^1.5.5",
    "@tiptap/extension-placeholder": "^2.1.8",
    "@tiptap/extension-table": "^2.1.8",
    "@tiptap/extension-table-cell": "^2.1.8",
    "@tiptap/extension-table-header": "^2.1.8",
    "@tiptap/extension-table-row": "^2.1.8",
    "@tiptap/pm": "^2.1.8",
    "@tiptap/react": "^2.1.8",
    "@tiptap/starter-kit": "^2.1.8",
    "animate.css": "^4.1.1",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.9",
    "electric-sql": "workspace:*",
    "fractional-indexing": "^3.2.0",
    "jsonwebtoken": "^9.0.2",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.15.0",
    "react-toastify": "^9.1.3",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.9",
    "shelljs": "^0.8.5",
    "tauri": "^0.15.0",
    "tiptap-markdown": "^0.8.2",
    "uuid": "^9.0.0",
    "vite-plugin-svgr": "^3.2.0",
    "wa-sqlite": "github:rhashimoto/wa-sqlite#master",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-readline": "^1.1.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@databases/pg": "^5.4.1",
    "@electric-sql/prisma-generator": "workspace:*",
    "@tailwindcss/typography": "^0.5.10",
    "@types/jest": "^29.5.4",
    "@types/lodash.debounce": "^4.0.7",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.15",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-window": "^1.8.5",
    "@types/uuid": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.29",
    "prisma": "^4.12.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
